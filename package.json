{
  "name": "simple-server",
  "version": "1.0.0",
  "description": "Simple server is a lightweight, extensible node.js server with inbuilt request routing, enabled static file serving including default document configurations, middleware support, request body parsing including form data, and lots more",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src --fix",
    "commit": "git-cz",
    "prebuild": "rimraf dist && rimraf lib",
    "build": "BABEL_ENV=build rollup --config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harrison-ifeanyichukwu/simple-server.git"
  },
  "keywords": [
    "server",
    "routing",
    "static",
    "file",
    "middleware",
    "rest",
    "api",
    "body-parser"
  ],
  "author": "Harrison Ifeanyichukwu <Harrisonifeanyichukwu@gmail.com> (http://fjsfoundations.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harrison-ifeanyichukwu/simple-server/issues"
  },
  "homepage": "https://github.com/harrison-ifeanyichukwu/simple-server#readme",
  "devDependencies": {
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.7.0",
    "babel-register": "6.26.0",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.1.0",
    "rollup": "0.59.1",
    "rollup-plugin-babel": "3.0.4",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-uglify": "4.0.0"
